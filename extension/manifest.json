{
  "manifest_version": 3,
  "name": "SonarSight",
  "version": "1.0.0",
  "description": "AI-powered insights from any webpage using Google Gemini and Perplexity APIs with your own API keys",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "permissions": ["contextMenus", "activeTab", "storage", "clipboard"],
  "host_permissions": [
    "http://localhost:5000/*",
    "https://api.perplexity.ai/*",
    "https://generativelanguage.googleapis.com/*"
  ],
  "author": "SonarSight",
  "homepage_url": "https://github.com/ChristopherJoshy/SonarSight",
  "offline_enabled": false,
  "short_name": "SonarSight",
  "web_accessible_resources": [
    {
      "resources": ["icons/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
